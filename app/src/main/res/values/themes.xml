    <style name="RegisterTextViewStyle" parent="TextAppearance.AppCompat">

        <item name="android:fontFamily">@font/bmitrabold</item>
        <item name="android:textColor">#4B4C4C</item>
        <item name="android:gravity">right|center</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
         <item name="android:textColorHint">#BAB9B9</item>
         <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
         <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/registertextviewborder</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:elevation">5sp</item>




    </style>
</resources>