<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relateiveparentranking"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/section1ranking"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/sectiononehomegradint"
        />


         <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_oneranking"
        android:src="@drawable/loginlogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"

             android:layout_centerHorizontal="true"
        app:civ_border_width="1dp"
        app:civ_border_color="#E4D338"
          />
    <View
        android:id="@+id/viewrankingone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/img_oneranking"
        android:layout_alignEnd="@+id/img_oneranking"
        android:layout_marginRight="6dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/badgeshapetopranking"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/arial"
            android:textSize="25sp"
            android:layout_alignLeft="@id/viewrankingone"
            android:layout_alignTop="@id/viewrankingone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp"
            android:textColor="#FFFFFF"
            android:text="@string/_1"/>

    <TextView
        android:id="@+id/txt_nameoneranking"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        tools:text="@string/mehran_akbari"
        android:textSize="14sp"
        android:gravity="center"
        android:fontFamily="@font/andalus"
        android:layout_below="@id/img_oneranking"
        android:layout_centerHorizontal="true"
        android:textColor="#E0E3E8"
        />
    <View
        android:id="@+id/viewscoreshape"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_nameoneranking"
        android:layout_centerHorizontal="true"
        android:background="@drawable/scoretextviewshape"/>


    <TextView
        android:id="@+id/txt_scoreoneranking"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        tools:text="1"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_marginTop="9dp"

        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/viewscoreshape"
        android:layout_alignTop="@id/viewscoreshape"

        android:layout_gravity="center"
        android:fontFamily="@font/bernard"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img2ranking"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/loginlogo"
        android:layout_toLeftOf="@id/img_oneranking"
        android:layout_alignBottom="@id/img_oneranking"
        android:layout_marginRight="2dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#B6B2B2"
        android:layout_marginTop="40dp"
        />
    <View
        android:id="@+id/viewrankingtwo"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/img2ranking"
        android:layout_alignRight="@+id/img2ranking"
        android:layout_marginRight="3dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/badgeshapetopranking"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/arial"
        android:textSize="22sp"
        android:layout_marginBottom="5dp"
        android:textColor="#FFFFFF"
        android:text="@string/_2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-3dp"
        android:layout_alignLeft="@id/viewrankingtwo"
        android:layout_alignTop="@id/viewrankingtwo"
        />
    <TextView
        android:id="@+id/txt_nametworanking"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="@string/mehran_akbari"
        android:textSize="14sp"
        android:fontFamily="@font/andalus"
        android:textColor="#E0E3E8"
        android:gravity="center"
        android:layout_alignLeft="@id/img2ranking"
        android:layout_marginRight="2dp"
        android:layout_below="@id/img2ranking"

        />
    <View
        android:id="@+id/viewscoreshape2"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/scoretextviewshape"
        android:layout_below="@id/txt_nameoneranking"
        android:layout_alignLeft="@id/img2ranking"
        android:layout_marginLeft="15sp"
        />
    <TextView
        android:id="@+id/txt_scoretworanking"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        tools:text="@string/_4870"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:fontFamily="@font/bernard"
        android:layout_alignLeft="@id/viewscoreshape2"
        android:layout_alignTop="@id/viewscoreshape2"
        android:layout_marginTop="9dp"

        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_treeranking"
        android:src="@drawable/loginlogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#F1940C"
        android:layout_toRightOf="@id/img_oneranking"
        android:layout_alignBottom="@id/img_oneranking"
        android:layout_marginLeft="5dp"
        />
    <View
        android:id="@+id/viewrankingthree"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignTop="@+id/img_treeranking"
        android:layout_alignRight="@+id/img_treeranking"
        android:layout_marginRight="3dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/badgeshapetopranking"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/arial"
        android:textSize="19sp"
        android:layout_marginBottom="5dp"
        android:textColor="#FFFFFF"
        android:text="@string/_3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_alignLeft="@id/viewrankingthree"
        android:layout_alignTop="@id/viewrankingthree"
        />

    <TextView
        android:id="@+id/txt_namethreeranking"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        tools:text="@string/mehran_akbari"
        android:textSize="14sp"
        android:fontFamily="@font/andalus"
        android:gravity="center"
        android:textColor="#E0E3E8"
        android:layout_alignRight="@id/img_treeranking"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/img2ranking"
        />
    <FrameLayout
        android:id="@+id/viewscoreshape3"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/scoretextviewshape"

        android:layout_below="@id/txt_nameoneranking"
        android:layout_alignRight="@id/img_treeranking"
        android:layout_marginRight="10sp"
        />

    <TextView
        android:id="@+id/txt_scorethreeranking"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        tools:text="@string/_3580"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:fontFamily="@font/bernard"
        android:layout_alignLeft="@id/viewscoreshape3"
        android:layout_alignTop="@id/viewscoreshape3"
        android:layout_marginTop="9dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@id/section1ranking"/>

</RelativeLayout>