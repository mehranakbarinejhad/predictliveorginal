<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".DetailsKalaActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.2">
        <ImageView
            android:id="@+id/img_kala_details_activity"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/girl"
            android:contentDescription="@string/todo" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#111"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="right"
        android:layout_margin="2dp"
        >
            <TextView
            android:id="@+id/txt_price_details_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            tools:text="@string/price"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/gigi"
            android:gravity="left|center"
            android:textColor="#111"
            android:textSize="18sp"
            tools:ignore="NestedWeights" />
        <TextView
            android:id="@+id/txt_titr_details_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            tools:text="@string/kafsh_juma"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/bmitra"
            android:gravity="right|center"
            android:paddingRight="5sp"
            android:textColor="#111"
            android:textSize="18sp"
            tools:ignore="NestedWeights" />



    </LinearLayout>




        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout_detailsactivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
        android:background="@drawable/shapetablayout"
            android:layout_margin="5dp"
            app:tabGravity="fill"
            android:elevation="10dp"

            >




        </com.google.android.material.tabs.TabLayout>

        <TextView
            android:id="@+id/txt_details_detailsactivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            tools:text="@string/detailskala"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/bmitra"
            android:gravity="top|right"
            android:paddingRight="5sp"
            android:textColor="#111"
            android:scrollbars="vertical"
            android:textSize="18sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#111"
        android:orientation="horizontal"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5sp"
        android:background="@drawable/addbuttonpredictshape"
        android:text="@string/Add_basket_text"
        android:textColor="#FFF"
        android:textSize="20sp"/>


</LinearLayout>
