<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F6F6"
    tools:context=".view.ShopActivity">

    <include
        layout="@layout/toolbar_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_shop"

        app:menu="@menu/navigation_shop_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize"
        android:orientation="vertical"
        android:weightSum="10">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_groupkala"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2.2"
            android:elevation="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_showAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/bmitrabold"
                android:text="@string/showall"
                android:textColor="#2E2E2E"
                android:textSize="17sp"
                tools:ignore="RelativeOverlap" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spineritem"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textAlignment="center" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerkala"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="6.3"
            android:background="@android:color/transparent"
            tools:ignore="NestedWeights" />



    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>