<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ResultRecoveryActivity"
    android:background="@drawable/logingradint">
    <androidx.cardview.widget.CardView
        android:id="@+id/section1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F7F7"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_userprofile_resultrecoveryactivity"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:src="@drawable/girl"
            android:layout_gravity="top"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"

            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/username2"
            android:textColor="#3A3A3A"
            android:textSize="18sp"
            android:fontFamily="@font/bmitrabold"
            android:layout_gravity="end|top"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center"
            android:layout_marginRight="2dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/password2"
            android:textColor="#3A3A3A"
            android:textSize="18sp"
            android:fontFamily="@font/bmitrabold"
            android:layout_gravity="end|center"
            android:gravity="center_horizontal|center"
            android:layout_marginRight="2dp"/>


        <TextView
            android:id="@+id/username_resultrecoveryactivity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            tools:text="@string/mehran_akbari"
            android:fontFamily="@font/bmitrabold"
            android:textColor="#3C3C3C"
            android:gravity="center_horizontal|center"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/password_resultrecoveryactivity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            tools:text="@string/mehran_akbari"
            android:fontFamily="@font/bmitrabold"
            android:textColor="#3C3C3C"
            android:gravity="center_horizontal|center"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3E3E3E"
            android:layout_marginTop="90dp"
            android:elevation="1dp"
            android:layout_gravity="top"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login_resultrecoveryactivity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center|bottom"
                android:layout_margin="1dp"
                android:text="@string/login2"
                android:fontFamily="@font/bmitrabold"
                android:textSize="24sp"
                android:background="@android:color/transparent"
                android:elevation="5dp"/>
    </androidx.cardview.widget.CardView>

</FrameLayout>