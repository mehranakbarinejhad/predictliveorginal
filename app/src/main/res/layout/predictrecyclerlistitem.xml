<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/predictrecyclershaper"
    android:elevation="10dp"


    >
    <TextView
        android:id="@+id/txt_status_predictrecyclerlist"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:text="@string/_min44"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:fontFamily="@font/bmitrabold"
        android:textSize="18sp"
        android:textColor="#D8DAD9"

        android:layout_centerVertical="true"
        android:background="@drawable/bordertextview"
        android:elevation="20sp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_hometeam"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/girl"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="4dp"
        app:civ_border_width="0dp"
        android:layout_toStartOf="@id/txt_status_predictrecyclerlist"
        />
    <TextView
        android:id="@+id/txt_hometeamname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/esteghlal"
        android:textColor="#EFEDED"
        android:textSize="16sp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/bmitrabold"
        android:layout_toStartOf="@+id/img_hometeam"
        android:layout_toEndOf="@id/txtadminhomegoal"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:elevation="20sp"

        />
<EditText
    android:id="@+id/edt_userhometeamgol"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:gravity="center"
    android:maxLength="2"
    android:textSize="22sp"
    android:textColor="#292929"
    android:inputType="number"
    android:fontFamily="@font/andalus"
    android:background="@drawable/predictedittextshape"
    android:layout_toEndOf="@id/btn_addpredict"
    android:layout_marginTop="4dp"
    android:layout_marginStart="5dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_addpredict"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="@string/_add"
        android:fontFamily="@font/bernard"
        android:textSize="18sp"
        android:layout_marginLeft="3dp"
        android:textColor="#FFF"
        android:background="@drawable/predictitembuttonshape"
        android:layout_marginStart="2dp"
        android:layout_centerVertical="true"
        android:elevation="20sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_toStartOf="@+id/txt_status_predictrecyclerlist"
        android:layout_toEndOf="@id/btn_addpredict"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#FFF"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_guestteam"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/girl"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:layout_alignParentBottom="true"
        app:civ_border_width="0dp"
        android:layout_toStartOf="@id/txt_status_predictrecyclerlist"
        />
    <TextView
        android:id="@+id/txt_guestteamname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/n_havaeiaraq"
        android:textColor="#ECE8E8"
        android:textSize="16sp"
        android:fontFamily="@font/bmitrabold"
        android:layout_toStartOf="@+id/img_guestteam"
        android:layout_toEndOf="@id/txt_adminguestgol"
        android:layout_marginBottom="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"

        android:elevation="20sp"


        />
    <EditText
        android:id="@+id/edt_userguestteamgol"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:maxLength="2"
        android:enabled="true"
        android:textSize="22sp"
        android:textColor="#292929"
        android:inputType="number"
        android:fontFamily="@font/bmitrabold"
        android:background="@drawable/predictedittextshape"
        android:layout_toEndOf="@id/btn_addpredict"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentBottom="true"/>
    <View
        android:id="@+id/viewhomeshape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/edt_userhometeamgol"
        android:layout_alignTop="@id/edt_userhometeamgol"
        android:layout_marginRight="-20dp"
        android:gravity="right"
        android:fontFamily="@font/arial"
        android:layout_marginTop="-5dp"
        android:background="@drawable/badgescorematchshape"
        />
    <TextView
        android:id="@+id/txtadminhomegoal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/viewhomeshape"
        android:layout_alignTop="@id/viewhomeshape"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/bmitrabold"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="19sp"
        tools:text="@string/_1" />
    <View
        android:id="@+id/viewguestshape"
        android:layout_marginTop="-5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/edt_userguestteamgol"
        android:layout_alignTop="@id/edt_userguestteamgol"
        android:layout_marginRight="-20dp"
        android:gravity="right"
        android:fontFamily="@font/arial"
        android:background="@drawable/badgescorematchshape"

        />
    <TextView
        android:id="@+id/txt_adminguestgol"
        android:layout_marginTop="1dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:fontFamily="@font/bmitrabold"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="19sp"
        android:layout_alignTop="@id/viewguestshape"
        android:layout_alignLeft="@id/viewguestshape"
        tools:text="@string/_1"

        />
</RelativeLayout>


