<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginprofile_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/logingradint"
    tools:context=".view.RegisterActivity">
    <ImageView
        android:id="@+id/Viewlogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/armlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:contentDescription="@string/todo"
        />


    <LinearLayout
        android:id="@+id/linearparent_registeractivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Viewlogo"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:weightSum="9"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="9"
            android:weightSum="7"
            android:baselineAligned="false"
            android:background="@drawable/registerlinearshape"
            android:layout_margin="10dp"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="6"
                tools:ignore="NestedWeights,UselessParent">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_username_loginprofileactivity"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/username"
                    style="@style/RegisterTextViewStyle"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_name_loginprofileactivity"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLength="20"
                    android:gravity="center"
                    android:hint="@string/name"
                    tools:ignore="NestedWeights"
                    style="@style/RegisterTextViewStyle"
                    />



                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_password_loginprofileactivity"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="@string/password"
                    android:gravity="center"
                    style="@style/RegisterTextViewStyle"
                    />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_confirm_loginprofileactivity"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="@string/confirm"
                    android:gravity="center"
                    style="@style/RegisterTextViewStyle"
                  />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_phonenumber_loginprofileactivity"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:gravity="center"
                    android:hint="@string/phone_number"
                    android:layout_gravity="center"
                    style="@style/RegisterTextViewStyle"
                    android:elevation="5sp"
                  />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_register_loginprofileactivity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/register"
                    android:textSize="25sp"
                    android:fontFamily="@font/bmitrabold"
                    android:textAllCaps="false"
                    android:layout_margin="10dp"
                    android:background="@drawable/loginbutton"
                    android:textColor="#FFF"/>

            </LinearLayout>

        </LinearLayout>





    </LinearLayout>
</RelativeLayout>
