<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".view.BuyActivity">



    <LinearLayout
        android:id="@+id/linear_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_alignParentTop="true"
        android:layout_margin="2sp"
        android:orientation="vertical"
        android:weightSum="2"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1.2"
            android:background="@drawable/shapelinearbuyactivity"
            android:orientation="vertical"
            android:elevation="5dp"
            android:weightSum="6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/profilebuy"
                android:textColor="#202020"
                android:gravity="center"
                android:textSize="18sp"
                android:paddingRight="10dp"
                tools:ignore="NestedWeights,RtlHardcoded" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_namekharidar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/shapebuybaketedittext"
                android:backgroundTintMode="add"
                android:elevation="5sp"
                android:textSize="15sp"
                android:textColorHint="#BAB9B9"
                android:padding="2dp"
                android:fontFamily="@font/bmitrabold"
                android:gravity="right|center"
                android:hint="@string/name"
                android:imeOptions="actionNext"
                android:inputType="text"
                tools:ignore="NestedWeights,RtlHardcoded" />

            <androidx.appcompat.widget.AppCompatEditText
android:id="@+id/edt_phonenumber_buyactivity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:hint="@string/phone_number"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:background="@drawable/shapebuybaketedittext"
                android:backgroundTintMode="add"
                android:elevation="5sp"
                android:textSize="15sp"
                android:textColorHint="#BAB9B9"
                android:padding="2dp"



                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_ostan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:hint="@string/ostan"
                android:imeOptions="actionNext"
                android:inputType="text"
                tools:ignore="NestedWeights"
                android:background="@drawable/shapebuybaketedittext"
                android:backgroundTintMode="add"
                android:elevation="5sp"
                android:textSize="15sp"
                android:textColorHint="#BAB9B9"
                android:padding="2dp"


                />

            <androidx.appcompat.widget.AppCompatEditText
android:id="@+id/edt_shahrestan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:hint="@string/shahrestan"
                android:imeOptions="actionNext"
                android:inputType="text"

                tools:ignore="NestedWeights"
                android:background="@drawable/shapebuybaketedittext"
                android:backgroundTintMode="add"
                android:elevation="5sp"
                android:textSize="15sp"
                android:textColorHint="#BAB9B9"
                android:padding="2dp"



                />

            <androidx.appcompat.widget.AppCompatEditText
android:id="@+id/edt_completeaddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:hint="@string/completeAddress"
                android:imeOptions="actionNext"
                android:inputType="text"
                tools:ignore="NestedWeights"
                android:background="@drawable/shapebuybaketedittext"
                android:backgroundTintMode="add"
                android:elevation="5sp"
                android:textSize="15sp"
                android:textColorHint="#BAB9B9"
                android:padding="2dp"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:background="@drawable/shapelinearbuyactivity"
            android:weightSum="4"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:text="@string/typepayment"
                android:textColor="#171717"
                android:gravity="center"
                android:textSize="19sp"

                tools:ignore="NestedWeights"

                android:paddingRight="10dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:orientation="horizontal"
                android:gravity="right"
                android:weightSum="2"
                >
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:text="@string/homepay"
                    android:textSize="19sp"
                    android:gravity="left|center"
                    android:layout_margin="2dp"
                    android:textColor="#111"
                    android:checked="true"
                    android:fontFamily="@font/bmitra"
                    android:padding="3dp"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:gravity="right|center"
                    android:text="@string/portbank"
                    android:textSize="19sp"
                    android:layout_margin="2dp"
                    android:enabled="false"
                    android:textColor="#404040"
                    android:fontFamily="@font/bmitra"
                    android:padding="3dp"/>

            </RadioGroup>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"

    >
    <TextView
        android:id="@+id/txt_text_sumprice_buyactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pricebye"
        android:fontFamily="@font/bmitra"
        android:textSize="20sp"
        android:paddingRight="3dp"
        android:textColor="#111"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp"/>

    <TextView
        android:id="@+id/txt_text_toman_buyactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toman"
android:fontFamily="@font/bmitra"
        android:textSize="20sp"
        android:textColor="#111"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"/>
    <TextView
        android:id="@+id/txt_sumPrice_buyactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/price"
     android:fontFamily="@font/bmitra"
        android:textSize="22sp"
        android:textColor="#111"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/txt_text_toman_buyactivity"
        android:layout_toStartOf="@id/txt_text_sumprice_buyactivity"
        android:gravity="start"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"/>
</RelativeLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_payment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:layout_margin="10dp"

                android:background="@drawable/shapebuttondetailsactivity"
                android:text="@string/payment"
                android:textColor="#FFF"
                android:textSize="25sp" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>