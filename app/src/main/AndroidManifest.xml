<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.liyanamarket.predictlive">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.PredictLive"
        tools:ignore="AllowBackup">
        <activity android:name=".ShopActivity"
            android:theme="@style/ShopStyle"/>
        <activity android:name=".view.SuccessRegisterActivityActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.ValidateCodeActivity" />
        <activity android:name=".view.NumberActivity" />
        <activity android:name=".view.RecoveryActivity" />
        <activity android:name=".view.PredictActivity" />
        <activity android:name=".view.HomeActivity" />
        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>